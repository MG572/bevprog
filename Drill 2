    cout << "Now please enter the name of some other friend. I don't know if its mutual friend or something" << endl;
    string friend_name;
    cin >> friend_name;
    cout << "Have you seen " << friend_name << " recently?" << endl;
    
    char friend_sex = '0';
    cout << "Please enter 'm' if the friend is male and enter 'f' if female. Press 'Enter' afterwards " << endl;
    cin >> friend_sex;
    if (friend_sex=='m')
    {
        cout << "If you see " << friend_name << " please ask him to call me." << endl;
    }
    if (friend_sex == 'f')
    {
        cout << "If you see " << friend_name << " please ask her to call me." << endl;
    }

    cout << "Please enter your age" << endl;
    int age;
    cin >> age;
    
    if (age <=0 || age>=110 )
    {
        simple_error("you're kidding!");
    }
    //It's possible that I mean to write out the things in the else first and I'm overengineering it but I think this is more logical
    else
    {
        cout << "I heard you just had your birthday and you are " << age << " years old" << endl;
    }

    if (age<12)
    {
        cout << "Next year you will be " << age + 1 << "." << endl;
    }
    if (age == 17)
    {
        cout << "Next year you will be able to vote." << endl;
    }
    if (age > 70)
    {
        cout << "I hope you are enjoying retirement." << endl;
    }
    cout << "Yours sincerely, " << endl << endl << endl;
    
    cout << "Marton Gergely" << endl; //az a ékezetes verziójat nem szereti
   
